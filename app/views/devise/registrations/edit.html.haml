#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .account-page__inner__field
          .account-page__inner__field__label
            = f.label :name
          .account-page__inner__field__input
            = f.text_field :name, autofocus: true
        .account-page__inner__field
          .account-page__inner__field__label
            = f.label :email
          .account-page__inner__field__input
            = f.email_field :email
        .account-page__inner__field
          .account-page__inner__field__label
            = f.label :password
            %i (英数字8文字以上)
          .account-page__inner__field__input
            = f.password_field :password, autocomplete: "off"
        .account-page__inner__field
          .account-page__inner__field__label
            = f.label :password_confirmation
          .account-page__inner__field__input
            = f.password_field :password_confirmation, autocomplete: "off"
        .account-page__inner__field
          .account-page__inner__field__label
            = f.label :avatar
          .account-page__inner__field__input
            = f.file_field :avatar
        .actions
          = f.submit "Update", class: 'btn'