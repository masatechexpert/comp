.form
  = form_for [@group, @bulletin_board] do |f|
    = f.text_field :content, class: 'form__bulletin_board', placeholder: 'type a bulletin_board'
    .form__mask
      = f.label :image, class: 'form__mask__image' do
        = fa_icon 'picture-o', class: 'icon'
        = f.file_field :image, class: 'hidden'
    = f.submit 'Send', class: 'form__submit'
    .messages
      = render partial: 'message', collection: @bulletin_boards