.header
  .header__title
    = link_to "Schedule", root_path, class: 'title'
  - if user_signed_in?
    .header__logout
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
  - else
    .header__sign-up
      = link_to "アカウント作成", new_registration_path(resource_name), class: 'btn'
    .header__sign-in
      = link_to "ログイン", new_session_path(resource_name), class: 'btn'
  .header__user
  - if user_signed_in?
    .header__avatar
      - if current_user.avatar?
        = image_tag current_user.avatar.to_s
      - else
        = image_tag "no_avatar.png"
    .header__name
      = link_to current_user.name, edit_user_registration_path, class: "user-name"
