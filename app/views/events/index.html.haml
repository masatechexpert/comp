%p#notice= notice
%h1 イベント
%table
  %thead
    %tr
      %th タイトル
      %th 説明
      %th 開始日時
      %th 終了日時
      %th{:colspan => "3"}
  %tbody
    - @events.each do |event|
      %tr
        %td= event.title
        %td= event.description
        %td= event.start_date
        %td= event.end_date
        %td= link_to '詳細', event
        %td= link_to '編集', edit_event_path(event)
        %td= link_to '削除', event, method: :delete, data: { confirm: 'スケジュールを削除しますか?' }
%br/
= link_to 'スケジュールを作成', new_event_path

