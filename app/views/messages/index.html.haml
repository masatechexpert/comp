= form_for [@group, @message] do |f|
  - current_user.groups.each do |group|
    .message
      .message-form
        .message-form__group-name
          = link_to edit_group_path(@group.id) do
            .name
              = group.name
        .message-form__text
          = f.text_field :content, class: 'form__message', placeholder: 'メッセージを入力してください', autocomplete: 'off'
        .message-form__submit
          = f.submit '送信', class: 'form__submit'

.wrap
  = render @messages
